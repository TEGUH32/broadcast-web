{
  "name": "whatsapp-broadcast-bot",
  "version": "1.0.0",
  "description": "WhatsApp Broadcast Bot dengan Sistem Pairing Code",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "clean": "rm -rf node_modules package-lock.json",
    "setup": "npm run clean && npm install",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "monitor": "node scripts/monitor.js",
    "seed": "node scripts/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "morgan": "^1.10.0",
    "whatsapp-web.js": "^1.23.0",
    "qrcode": "^1.5.3",
    "memorystore": "^1.6.7",
    "nodemailer": "^6.9.8",
    "express-rate-limit": "^7.1.5",
    "session-file-store": "^1.5.0",
    "helmet": "^7.1.0",
    "csurf": "^1.11.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "handlebars": "^4.7.8",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "socket.io": "^4.7.2",
    "sharp": "^0.33.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "rate-limit-redis": "^3.0.0",
    "redis": "^4.6.12",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "mongoose": "^8.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.1.1",
    "cross-env": "^7.0.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "whatsapp",
    "broadcast",
    "bot",
    "messaging",
    "automation",
    "whatsapp-api",
    "nodejs",
    "express"
  ],
  "author": "WhatsApp Broadcast Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-broadcast-bot.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/whatsapp-broadcast-bot/issues"
  },
  "homepage": "https://github.com/yourusername/whatsapp-broadcast-bot#readme",
  "private": true,
  "funding": {
    "type": "patreon",
    "url": "https://patreon.com/yourusername"
  },
  "contributors": [
    "Your Name <your.email@example.com>"
  ],
  "directories": {
    "lib": "lib",
    "test": "tests"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!**/jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
